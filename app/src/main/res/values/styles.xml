<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="fragmentTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="mediumWhiteText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="orangeButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="grayButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="spinner_custom_style">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:background">@drawable/spinner_custom</item>
    </style>

    <style name="edittext_custom_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/edittext_custom</item>
    </style>

    <style name="listview_exercise_style" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="list_item_exercise_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="list_header_exercise_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
